# 使用 debian:11 作为基础镜像
FROM debian:11

RUN apt-get update && apt-get install -y \
    sudo \
    vim \
    net-tools \
    && rm -rf /var/lib/apt/lists/*

RUN useradd -ms /bin/bash tiansuo \
    && echo "tiansuo:ubuntu" | chpasswd \
    && usermod -a -G sudo tiansuo

WORKDIR /home/tiansuo
CMD ["bash"]

